<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/betmoBlack"
    tools:context=".Submissions">

    <Button
        android:id="@+id/guessBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/betmoOrange"
        android:onClick="switchToGuess"
        android:text="Guess Mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.209" />

    <Button
        android:id="@+id/finalBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="68dp"
        android:background="@color/betmoOrange"
        android:onClick="switchToFinal"
        android:text="Final Mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guessBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208" />

    <EditText
        android:id="@+id/guessInput"
        android:layout_width="102dp"
        android:layout_height="69dp"
        android:background="@color/betmoOrange"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/betmoBlack"
        android:textSize="25pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:background="@color/betmoOrange"
        android:onClick="send"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessInput"
        app:layout_constraintVertical_bias="0.347" />

    <Button
        android:id="@+id/mainMenuBtn"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginBottom="108dp"
        android:background="@color/betmoOrange"
        android:onClick="gotoMainMenu"
        android:text="Main Menu"
        android:textAlignment="center"
        android:textColor="@color/betmoBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.124" />

    <TextView
        android:id="@+id/warningLabel"
        android:layout_width="363dp"
        android:layout_height="61dp"
        android:background="@color/warningRed"
        android:text="WARNING: \nYou are in FINAL SUBMISSION MODE"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/guessInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

    <TextView
        android:id="@+id/updateDisp"
        android:layout_width="159dp"
        android:layout_height="47dp"
        android:layout_marginTop="64dp"
        android:background="@color/betmoOrange"
        android:text="No updates :)"
        android:textAlignment="center"
        android:textColor="@color/betmoBlack"
        app:layout_constraintBottom_toTopOf="@+id/joshAmountDisp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>