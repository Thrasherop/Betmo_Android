<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/betmoBlack"
    tools:context=".MainMenu">


    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="122dp"
        android:layout_height="28dp"
        android:background="@color/betmoOrange"
        android:text="Betmo"
        android:textAlignment="center"
        android:textColor="@color/betmoBlack"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.173" />

    <Button
        android:id="@+id/gotoLoginPageBtn"
        android:layout_width="122dp"
        android:layout_height="46dp"
        android:background="@color/betmoOrange"
        android:onClick="gotoAccounts"
        android:text="Accounts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView"
        app:layout_constraintVertical_bias="0.257" />

    <Button
        android:id="@+id/transferBtn"
        android:layout_width="122dp"
        android:layout_height="46dp"
        android:background="@color/betmoOrange"
        android:onClick="gotoTransfer"
        android:text="Transfer funds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotoLoginPageBtn"
        app:layout_constraintVertical_bias="0.048" />

    <Button
        android:id="@+id/submitGuessBtn"
        android:layout_width="122dp"
        android:layout_height="46dp"
        android:background="@color/betmoOrange"
        android:onClick="gotoSubmissions"
        android:text="Submit Guess"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transferBtn"
        app:layout_constraintVertical_bias="0.071" />

    <Button
        android:id="@+id/switchUserBtn"
        android:layout_width="92dp"
        android:layout_height="49dp"
        android:background="@color/betmoOrange"
        android:onClick="switchUser"
        android:text="Switch User"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847" />

    <Button
        android:id="@+id/manualBtn"
        android:layout_width="122dp"
        android:layout_height="46dp"
        android:background="@color/betmoOrange"
        android:onClick="gotoManualMode"
        android:text="Manual Mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitGuessBtn"
        app:layout_constraintVertical_bias="0.103" />


</androidx.constraintlayout.widget.ConstraintLayout>